---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import Theme from "../components/Theme.astro";
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html class="{theme || 'dark'}">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Source+Code+Pro:ital,wght@0,200..900;1,200..900&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Syne:wght@400..800&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />

    <link
      rel="stylesheet"
      href="https://unpkg.com/lenis@1.1.13/dist/lenis.css"
    />

    <!-- Gsap -->
    <script
      is:inline
      src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>
    <script
      is:inline
      src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/Flip.min.js"></script>
    <script
      is:inline
      src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/ScrollTrigger.min.js"
    ></script>
    <script
      is:inline
      src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/ScrollToPlugin.min.js"
    ></script>
    <script is:inline src="https://unpkg.com/gsap@3.12.2/dist/Flip.min.js"
    ></script>
    <script is:inline src="https://unpkg.com/lenis@1.1.13/dist/lenis.min.js"
    ></script>
  </head>

  <body
    class="bg-jour dark:bg-nuit text-nuit dark:text-jour w-full font-poppins"
  >
    <Theme />
    <Navbar />
    <slot />
    <Footer />

    <!-- Lightbox structure -->
    <div class="lightbox" id="lightbox">
      <button class="close" id="lightbox-close-btn">&times;</button>
      <img id="lightbox-img" src="" alt="Image en grand" />
    </div>
    
    <script src="/scripts/lightbox.js" defer></script>
  </body>
</html>

<script is:inline>
  // document.addEventListener("scroll", function () {});

  gsap.registerPlugin(
    Flip,
    ScrollTrigger,
    ScrollToPlugin,
    Flip
    // EaselPlugin,
    // TextPlugin,
    // CustomEase
  );

  // Lenis scroll Smooth
  const lenis = new Lenis();

  // Lenis
  function raf(time) {
    lenis.raf(time);
    requestAnimationFrame(raf);
  }

  requestAnimationFrame(raf);

  console.log(
    "%cP I Z Z A P U N K",
    "background-color: black;color: white; font-size: 16px; font-weight: bold; padding:5px 25px; margin-top:20px"
  );

  console.log("%c # What is hidden cannot always be seen.", "margin-top:40px");
</script>

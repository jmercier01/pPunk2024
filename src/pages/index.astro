<script is:inline>
      document.addEventListener("scroll", function () {});
      
        gsap.registerPlugin(
          Flip,
          ScrollTrigger,
          ScrollToPlugin
          // EaselPlugin,
          // TextPlugin,
          // CustomEase
        );
        // Lazy Gif
        const lazyGif = document.getElementById("lazyGif");
        lazyGif.src =
          "images/GIF198-14-SPENBa-LX9-LY6-LZ11-colShap4-1050px-151fr-30fps-19818-4945.gif";

        // Partie Updates
        // Sélectionner tous les liens avec la classe 'toggleLink'
        const toggleLinks = document.querySelectorAll(".toggleLink");

        // Boucle sur chaque lien et ajouter un événement click
        toggleLinks.forEach((link) => {
          link.addEventListener("click", function (event) {
            event.preventDefault(); // Empêche la redirection du lien
            const targetId = this.getAttribute("data-target"); // Récupère l'ID cible à partir de l'attribut data-target
            const eventExpand = document.getElementById(targetId); // Sélectionne l'image correspondante
            // console.log(this.parentElement.querySelector('.contenuEvents'));
            const content = this.parentElement.querySelector(".contenuEvents");

            if (eventExpand.style.opacity == 0 || eventExpand.style.opacity == "0") {
              eventExpand.classList.remove("hidden");

              gsap.to(eventExpand, {
                opacity: 1,
                scale: 1,
                duration: 0.5,
                ease: "power2.out",
              });
              content.classList.remove("hidden");
              content.classList.add("flex"); // Ajoute la classe 'flex'
              gsap.to(content, {
                opacity: 1,
                y: 0, // Optionnel : animation de translation vers le haut, modifier selon le besoin
                duration: 0.5,
                ease: "power2.out",
              });
              this.innerHTML =
                '<i class="fa-solid fa-rectangle-xmark mt-4"></i>';
            } else {
              gsap.to(eventExpand, {
                opacity: 0,
                scale: 0,
                duration: 0.5,
                ease: "power2.in",
                onComplete: () => {
                  eventExpand.classList.add("hidden");
                },
              });
              // Masquer le contenu (contenuEvents)
              gsap.to(content, {
                opacity: 0,
                y: -20, // Optionnel : animation de translation vers le bas, modifier selon le besoin
                duration: 0.5,
                ease: "power2.in",
                onComplete: () => {
                  content.classList.add("hidden");
                  content.classList.remove("flex");
                },
              });

              this.innerHTML = '<i class="fa-solid fa-expand mt-4"></i>';
            }
          });
        });

        // BURGER
        closeMenu = function () {
          for (var j = 0; j < menu.length; j++) {
            menu[j].classList.toggle("hidden");
          }
        };
        // open
        const burger = document.querySelectorAll(".navbar-burger");
        const menu = document.querySelectorAll(".navbar-menu");

        if (burger.length && menu.length) {
          for (var i = 0; i < burger.length; i++) {
            burger[i].addEventListener("click", function () {
              closeMenu();
            });
          }
        }

        // close
        const close = document.querySelectorAll(".navbar-close");
        const backdrop = document.querySelectorAll(".navbar-backdrop");

        if (close.length) {
          for (var i = 0; i < close.length; i++) {
            close[i].addEventListener("click", function () {
              closeMenu();
            });
          }
        }

        if (backdrop.length) {
          for (var i = 0; i < backdrop.length; i++) {
            backdrop[i].addEventListener("click", function () {
              closeMenu();
            });
          }
        }

        // NAVIGATION
        // Nav link
        updates = document.getElementById("link-updates");
        projects = document.getElementById("link-projects");
        updatesSm = document.getElementById("link-sm-updates");
        projectsSm = document.getElementById("link-sm-projects");
        contact = document.getElementById("link-contact");
        contactSm = document.getElementById("link-sm-contact");
        const sections = [
          { element: updates, target: "#news", duration: 1 },
          { element: projects, target: "#projects", duration: 2 },
          { element: contact, target: "#contact", duration: 2 },
          {
            element: updatesSm,
            target: "#news",
            duration: 1,
            closeMenuFn: closeMenu,
          },
          {
            element: projectsSm,
            target: "#projects",
            duration: 2,
            closeMenuFn: closeMenu,
          },
          {
            element: contactSm,
            target: "#contact",
            duration: 2,
            closeMenuFn: closeMenu,
          },
        ];

        sections.map(({ element, target, duration, closeMenuFn }) => {
          element.addEventListener("click", () => {
            if (closeMenuFn) closeMenuFn();
            gsap.to(window, {
              duration: duration,
              scrollTo: target,
              ease: "power2.out",
            });
          });
        });

        // Lenis scroll Smooth
        const lenis = new Lenis();

        // Lenis
        function raf(time) {
          lenis.raf(time);
          requestAnimationFrame(raf);
        }

        requestAnimationFrame(raf);

        console.log(
          "%cP I Z Z A P U N K",
          "background-color: black;color: white; font-size: 16px; font-weight: bold; padding:5px 25px; margin-top:20px"
        );

    </script>


